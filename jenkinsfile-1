pipeline //comment: declarative pipileine starts with keyword pipeline 
{
   agent any
    stages
    {
        stage('Scm Checkout')
        {
           steps
            {
               echo "Hello Scm Checkout"
             
             }

        }
       stage('code building')
        {
           steps
            {
               echo "Hello code building"
             
             }

        }
      stage('code deployed')
        {
           steps
            {
               echo "Hello code deployed"
             
             }

        }
    }
}
